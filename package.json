{
  "name": "LiveChatMonitor",
  "version": "1.0.0",
  "description": "Monitor Live Streams from TikTok that are available publicly.",
  "main": "src/main/index.js",
  "author": "DCI2S LLC",
  "license": "MIT",
  "scripts": {
	  "dev": "concurrently \"vite\" \"electron .\"",
	  "build": "vite build",
	  "start": "electron .",
	  "dist": "electron-builder",
	  "dist:win": "electron-builder --win --x64",
	  "dist:mac": "electron-builder --mac --x64 --arm64",
	  "dist:linux": "electron-builder --linux --x64"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.0",
    "node-fetch": "^2.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiktok-live-connector": "^2.0.7-beta1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.1",
    "electron": "^24.2.0",
    "electron-builder": "^24.6.0",
    "vite": "^4.0.0",
    "vite-plugin-react": "^3.0.0"
  },
  "build": {
    "extends": null,
    "appId": "com.dcis2.livechatmonitor",
    "productName": "LiveChatMonitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**",
      "src/main/**",
      "node_modules/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/LiveChat.icns"
    },
    "win": {
      "target": [
        "nsis",
        "nsis-web"
      ],
      "icon": "assets/LiveChat.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/LiveChat.png"
    }
  }
}
